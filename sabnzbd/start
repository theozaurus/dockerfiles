#!/bin/bash
# -*- sh -*-

SABNZBD_CONF=/etc/default/sabnzbdplus
sed -i s/\$SITE_NAME/$SITE_NAME/ $SABNZBD_CONF
sed -i s/\$SITE_PORT/$SITE_PORT/ $SABNZBD_CONF

SABNZBD_INI=/root/sabnzbd.ini
sed -i s/\$USENET_SERVER/$USENET_SERVER/ $SABNZBD_INI
sed -i s/\$USENET_PORT/$USENET_PORT/ $SABNZBD_INI
sed -i s/\$USENET_USER/$USENET_USER/ $SABNZBD_INI
sed -i s/\$USENET_PASSWORD/$USENET_PASSWORD/ $SABNZBD_INI
sed -i s/\$SABNZBD_USERNAME/$SABNZBD_USERNAME/ $SABNZBD_INI
sed -i s/\$SABNZBD_PASSWORD/$SABNZBD_PASSWORD/ $SABNZBD_INI
sed -i s/\$SABNZBD_API_KEY/$SABNZBD_API_KEY/ $SABNZBD_INI

service sabnzbdplus start
/bin/bash
